<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bytehandwerk.standkassepro">

    <!-- Version und Features werden überwiegend im Gradle-Build konfiguriert -->
    <uses-sdk android:minSdkVersion="24" android:targetSdkVersion="35"/>

    <application
        android:name=".StandKasseApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.StandKassePro">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Weitere Komponenten wie Services, Receivers oder ContentProviders -->
        <!-- können hier ergänzt werden wenn nötig -->

    </application>

</manifest>